<link rel="stylesheet" href="/css/comment.css">

<li id="comment-<%= comment._id %>">
    <div class="media m-2 border-bottom">
        <h3 class="profile-pic-holder">
            <%if(comment.user.avatar){%>
                <img src="<%=comment.user.avatar%>" alt="image">
            <%}else{%>
                <img src="/images/avatar2.png" alt="image">
            <%}%>
        </h3>

        <div class="media-body">
            <div class="d-flex flex-row justify-content-between" style="height: 22px; width: 150px;">

                <div class="comment-user-name">
                    <h5 class="mt-0"><%= comment.user.name %></h5>
                </div>
                <div>
                    <%if(locals.user && locals.user.id==comment.user.id){%>
                        <p>
                            <a class="delete-comment-button" href="/comments/destroy/<%= comment._id %>">X</a>
                        </p>
                    <%}%>
                </div>

            </div>
            <div class="comment-content">
                <%= comment.content %>
            </div>

        </div>
    

    </div>

    

</li>
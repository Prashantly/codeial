<link rel="stylesheet" href="/css/signup.css">

<div class="auth-form">

    <div class="left">
        <div class="overlay">
            <h1>Hello World.</h1>
            <p>
                Welcome to Codeial a place to connect with people around the world. SignUp to become part of our
                community.
            </p>
            <span>
                <p>SignUp with Google and make your experience faster</p>
                <a href="/users/auth/google"><i class="fab fa-google"></i></a>
            </span>

        </div>

    </div>

    <form action="/users/create" method="POST">

        <div class="right">
            <h5>Sign up</h5>
            <p>Already have an Account <a href="/users/sign-in">Go to Login</a></p>
            <div class="inputs">
                <input type="text" name="name" placeholder="Name" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
            </div>

            <br>
            <br>
            <button type="submit">sign up</button>

        </div>
    </form>

</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
   integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<link rel="stylesheet" href="/css/user_profile.css">

<div id="dashboard-one">

   <div id="dashboard-pic-container">
      <%if(profile_user.avatar){%>
         <img src="<%= profile_user.avatar %>" alt="<%=profile_user.name%>" width="100">
         <%}else{%>
            <img src="/images/avatar2.png" alt="avatar2">
            <%}%>

   </div>

   <div id="user-dashboard-name">
      <h2>
         <%=profile_user.name%>
      </h2>
   </div>

   <div id="edit-profile">

      <%if(locals.user.id==profile_user.id){%>

         <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Edit Profile
         </button>

         <%}%>


            <%if(!locals.user.friendships.find(x=> x.toString() === profile_user.id) && locals.user.id !=
               profile_user.id){%>

               <a href="/friends/create/?toid=<%=profile_user._id%>">
                  <button type="button" class="btn btn-primary">
                     Make Friend
                  </button>
               </a>

               <%}%>

    <%if(locals.user.friendships.find(x=> x.toString() === profile_user.id)){%>

     <a href="/friends/destroy/?toid=<%=profile_user._id%>">
       <button type="button" class="btn btn-danger">
         Remove Friend
      </button>
     </a>

   <%}%>

   </div>

   <!-- Modal -->
   <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
         <div class="modal-content">
            <div class="modal-header">
               <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Your Profile</h1>
               <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                  
               </button>
            </div>
            <div class="modal-body">
               <div class="form-group">
                  <form action="/users/update/<%=profile_user.id%>" method="POST" enctype="multipart/form-data"
                     id="update-profile-form">
                     <label for="profile-name">Profile Name</label>
                     <input type="text" class="form-control" id="profile-name" name="name" placeholder="enter name"
                        value="<%=profile_user.name%>">
                     <label for="profile-email">Profile Email</label>
                     <input type="email" class="form-control" name="email" id="profile-email" placeholder="enter email"
                        value="<%= profile_user.email %>">
                     <label for="file-upload">Choose Profile Pic</label>
                     <input type="file" class="form-control-file" id="file-upload" onchange="loadFile(event)"
                        name="avatar" placeholder="Profile Picture">

                  </form>
               </div>
               <div id="preview-holder">
                  <img id="output">
               </div>
            </div>
            <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
               <button type="submit" class="btn btn-primary" form="update-profile-form">Save changes</button>
            </div>
         </div>
      </div>
   </div>

</div>

<div id="profile-options">
   <!-- <div id="timeline" class="profile-child" onclick="showTimeline()">
       <h4><i class="fas fa-stream"></i></h4>
       <h3>Timeline</h3>
   </div> -->

   <div id="friends" class="profile-child" onclick="showFriends()">
       <h4><i class="fas fa-user-friends"></i></h4>
       <h3>Friends</h3>
   </div>

   <div id="alluser" class="profile-child" onclick="showAllUser()">
       <h4><i class="fas fa-users"></i></h4>
       <h3>All Users</h3>
   </div>
</div>

<div id="display-container">

   <div id="post-display-container">
      <h2>Your Feed</h2>
      <div id="posts-list-container">
         <div>
             <% for (post of posts) {%>
               
               <%- include("_post") %>
                     
             <%}%>
         </div>
     </div>
   </div>

   <div id="friend-display-container">

      <h2>Your Friends</h2>

      <% for(friend of all_friends){%>
         <div class="list-group-item list-group-item-action list-group-item-info profile-info">

            <div class="child-one">

            <a href="/users/profile/<%=friend._id%>">
               <div class="profile-pic-holder">
                  <%if(friend.avatar){%>
                     <img src="<%=friend.avatar%>" alt="image">
                  <%}else{%>
                      <img src="/images/avatar2.png" alt="image">
                     
                  <%}%>
               </div>
            </a>

            </div>

            <div class="child-two">
               <h3 class="profile-name-holder">
                  <a href="/users/profile/<%=friend._id%>"><%=friend.name%></a>
               </h3>

            </div>
         </div>
      <%}%>
   </div>

   <div id="alluser-display-container">
      <h2>All Users</h2>
      <% for(u of all_users){%>
         <div class="list-group-item list-group-item-action list-group-item-info profile-info">

            <div class="child-one">

               <a href="/users/profile/<%=u._id%>">
                  <div class="profile-pic-holder">
                     <%if(u.avatar){%>

                        <img src="<%=u.avatar%>" alt="image">

                     <%}else{%>

                        <img src="/images/avatar2" alt="image">

                     <%}%>

                  </div>
               </a>

            </div>

            <div class="child-two">
               <h3 class="profile-name-holder">
                  <a href="/users/profile/<%=u._id%>"><%=u.name%></a>
               </h3>
            </div>
         </div>
      <%}%>
   </div>


</div>


